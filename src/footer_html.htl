        color: rgb(13, 102, 208);
    }

    .AD-footer-copyright {
        color: #999;
        text-align: center;
    }

    @media screen and (min-width: 1080px) {

        .AD-footer-logo {
            display: none;
        }

        .AD-footer .spectrum-Accordion {
            display: flex;
        }

        .AD-footer .spectrum-Accordion-item {
            border-color: transparent;
            flex-basis: 50%;
        }

        .AD-footer .spectrum-Accordion-itemIndicator {
            display: none;
        }

        .AD-footer .spectrum-Accordion-itemContent {
            display: block;
            padding-bottom: 4px;
        }

        .AD-footer .AD-footer-social-column {
            flex-basis: 100%;
        }

        .AD-footer .AD-footer-social-column .spectrum-Accordion-itemContent {
            width: 50%;
            display: inline-block;
            float: left;
        }

        .AD-footer .spectrum-Accordion-itemHeader {
            font-size: 15px;
            font-weight: 600;
            color: #fff;
            text-transform: none;
        }

        .AD-footer .spectrum-Accordion-itemHeader,
        .AD-footer .spectrum-Accordion-itemContent {
            padding-left: 0;
            padding-right: 0;
        }

        .AD-footer .spectrum-Accordion-item {
            padding-left: 30px;
            padding-right: 30px;
        }

        .AD-footer .spectrum-Accordion-item:first-child {
            padding-left: 0;
        }

        .AD-footer .spectrum-Accordion-item:last-child {
            padding-right: 0;
        }

        .AD-footer .spectrum-Accordion-item + .spectrum-Accordion-item {
            border-left: 1px solid #9a9595;
